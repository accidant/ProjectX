<script>
    function setIcon(icon) {
        document.getElementById("module_gamebundle_gametype_icon").value=icon;
        document.getElementById("icon_chosen").setAttribute("src",icon);
    }
</script>

<div id="page-heading">
    <h1>Game creation</h1>
</div>

<div class="content-box-outer">
	<div class="content-box">
		<div class="content-box-content">
                    {{ macros.render_flashes() }}
                    <div class="col">
                        <form action="{{ path('games_create') }}" method="post" class="form" {{ form_enctype(main_content['form']) }}>
                            <div id="module_gamebundle_gametype">
                                    {% for element in main_content['form'] if loop.first %}
                                    <div class="col">    
                                        {{ form_row(element) }}
                                    </div>
                                    <div class="clear"></div>
                                    {% endfor %}
                                    <div class="col">
                                        <label>Name:</label>
                                        <input type="text" id="module_gamebundle_gametype_name" name="module_gamebundle_gametype[name]" required="required" />
                                    </div>
                                    <div class="clear"></div>
                                    <div class="col">
                                        <label>Description:</label>
                                        <input type="text" id="module_gamebundle_gametype_description" name="module_gamebundle_gametype[description]" required="required" />
                                    </div>
                                    <div class="clear"></div>
                                    <div class="col">
                                        <label>Url:</label>
                                        <input type="text" id="module_gamebundle_gametype_url" name="module_gamebundle_gametype[url]"/>
                                    </div>
                                    <div class="clear"></div>
                                    <div class="col">
                                        <label>Icon:</label>
                                        <img id="icon_chosen" class="icon-game" />
                                        <input type="hidden" id="module_gamebundle_gametype_icon" name="module_gamebundle_gametype[icon]" />
                                        <!--input type="text" id="module_gamebundle_gametype_icon" name="module_gamebundle_gametype[icon]" required="required" /-->
                                    </div>
                                    <div class="clear"></div> 
                                    <div class="col no-label">
                                        {% for icon in main_content['icons'] %}
                                            <img src="{{icon}}" class="icon-game" onclick="setIcon('{{icon}}')"/>
                                        {% endfor %}
                                    </div>
                                    <div class="clear"></div>                        
                                </div>
                                <div class="col">
                                    <input type="submit" value="Create" />
                                    <a href="{{ path('games') }}" class="button">Back</a>
                                </div>
                                <div class="clear"></div>
                        </form>
                    </div>
		</div>
	</div>
</div>
