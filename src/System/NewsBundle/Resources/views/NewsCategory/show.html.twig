<h1>NewsCategory</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Name</th>
            <td>{{ main_content['entity'].name }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ main_content['entity'].description }}</td>
        </tr>
        <tr>
            <th>Id</th>
            <td>{{ main_content['entity'].id }}</td>
        </tr>
        <tr>
            <th>Createdate</th>
            <td>{{ main_content['entity'].createDate|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Updatedate</th>
            <td>{{ main_content['entity'].updateDate|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Hidden</th>
            <td>{{ main_content['entity'].hidden }}</td>
        </tr>
        <tr>
            <th>Deleted</th>
            <td>{{ main_content['entity'].deleted }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('newscategory') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('newscategory_edit', { 'id': main_content['entity'].id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('newscategory_delete', { 'id': main_content['entity'].id }) }}" method="post">
            {{ form_widget(main_content['delete_form']) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
