<script>
    function hideMessage(type) {
        document.getElementsByClassName(type)[0].style.display="none";
    }
</script>

<div id="page-heading">
    <h1>News Category list</h1>
</div>

<div class="content-box-outer">
	<div class="content-box">
		<div class="content-box-content">
			{{ macros.render_flashes() }}
			<div class="col">
				<table class="table records_list">
					<thead>
					<tr>
						<th></th>
						<th>Name</th>
						<th>Description</th>
						<th>Createdate</th>
						<th>Updatedate</th>
						<th>Actions</th>
					</tr>
					</thead>
						<tbody>
						{% for entity in main_content['entities'] %}
							<tr>
								<td><a class="icon_cb icon-checkbox info-tooltip" title="Checkbox"></a></td>
								<td><a href="{{ path('newscategory_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
								<td>{{ entity.description }}</td>
								<td>{% if entity.createDate %}{{ entity.createDate|date('Y-m-d H:i:s') }}{% endif %}</td>
								<td>{% if entity.updateDate %}{{ entity.updateDate|date('Y-m-d H:i:s') }}{% endif %}</td>
								<td>
									<a href="{{ path('newscategory_edit', { 'id': entity.id }) }}" class="icon icon-edit info-tooltip" title="Edit"></a>
									<a href="{{ path('newscategory_delete', { 'id': entity.id }) }}" class="icon icon-delete info-tooltip" title="Delete"></a>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="6">No Data</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
			<div class="clear"></div>
			<div class="col no-label">
				<a href="{{ path('newscategory_new') }}" class="button">Create News Category</a>
			</div>
			<div class="clear"></div>
		</div>
	</div>
</div>
