		{% block navigation %}
		<div class="nav-bg">
			<div class="nav-wrapper">
				<div class="main-nav">
					<ul class="elements">
						{% for category in navigation.categories %}
							<li><a href=""><b>{{ category.name }}</b></a></li>
							{#<li><a href=""><b>Dashboard</b></a></li>
